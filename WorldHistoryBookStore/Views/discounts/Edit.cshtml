@model WorldHistoryBookStore.Models.discount

@{
    ViewBag.Title = "Edit";
}
<style>
    .form-horizontal {
        background-color: white;
        border-color: black;
        border-width: thin;
        border-style: solid;
        border-radius: 10px;
    }

    .form-actions {
        padding-left: 10px;
    }
</style>

<h2>Edit</h2>


<h4>Discount</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.discounttype)

        <div class="form-group">
            @Html.LabelFor(model => model.stor_id, "stor_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("stor_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.stor_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lowqty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lowqty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lowqty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.highqty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.highqty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.highqty, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.discount1)

        <div class="form-group">
            <div class="form-actions no-color">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
