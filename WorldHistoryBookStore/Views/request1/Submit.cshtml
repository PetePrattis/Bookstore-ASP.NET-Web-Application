@model IEnumerable<WorldHistoryBookStore.Models.author>

@{
    ViewBag.Title = "Submit";
}
<style>
    form {
        background-color: white;
        border-color: black;
        border-width: thin;
        border-style: solid;
        border-radius: 10px;
        flex-wrap: wrap;
        padding: 10px;
    }
</style>

<script type="text/javascript">
    function validateForm() {
        var a = new String(document.forms["form"]["start"].value);
        var b = new String(document.forms["form"]["end"].value);
        var c = new String(document.forms["form"]["number"].value);
        if ((a == "" && b == "" && c == "") || (a == "" && b != "" && c == "") || (a != "" && b == "" && c == "") || (a == "" && b == "" && c != "")) {
            alert("Please Fill All Required Fields Or Leave At Least One Field Empty");
            return false;
        }
        else if ((a != "" && b != "" && c != "")) {
            return true;
        }
        else if ((a == "" && b != "" && c != "")) {
            //document.forms["form"]["start"].value = "01/01/1992";
            return true;
        }
        else if ((a != "" && b == "" && c != "")) {
           // document.forms["form"]["end"].value = "01/01/1995";
            return true;
        }
        else if ((a != "" && b != "" && c == "")) {
            document.forms["form"]["number"].value = "0";
            return true;
        }
    }
</script>

<h2>Request Data</h2>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<form action="Index" method="post" id="my_form" name="form" onsubmit="return validateForm()">

    <label for="startd">Start date:</label>

    <input type="date" id="startd" name="start"
           value="1992-06-15"
           min="1992-06-15"> <!--max="1995-12-30"-->

    <label for="endd">End date:</label>

    <input type="date" id="endd" name="end"
           value="1995-12-31"
           min="1992-06-16"> <!--max="1995-12-31"-->

    <label for="num">Number of data:</label>

    <input type="number" id="num" name="number"
           value="1"
           min="1">

    <br />
    <input type="submit" value="Submit" class="btn btn-primary" />

</form>

